int hexchk(char *chr)
{
</p>
<pre class="code">int c;</pre>
<pre class="code">while (*chr != &#039;\0&#039;) {
	c=*chr++;
	//printf(&quot;%d,%c%x\r\n&quot;, c,c,c);
	//if      (c == &#039; &#039;) continue;
	//else if (c &gt;= &#039;0&#039; &amp;&amp; c &lt;= &#039;9&#039;) continue;
	//else if (c &gt;= &#039;a&#039; &amp;&amp; c &lt;= &#039;f&#039;) continue;
	//else if (c &gt;= &#039;A&#039; &amp;&amp; c &lt;= &#039;F&#039;) continue;
	if (c &gt;= &#039;0&#039; &amp;&amp; c &lt;= &#039;9&#039;) continue;
	else return 1;
}
return 0;</pre>

