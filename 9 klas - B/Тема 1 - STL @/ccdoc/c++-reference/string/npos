   <span class="br0">&#123;</span>
     <span class="co1">// find delimiter (end of the word)</span>
     end_pos <span class="sy0">=</span> text.<span class="me1">find_first_of</span><span class="br0">&#40;</span>delims<span class="sy0">,</span> beg_pos<span class="br0">&#41;</span><span class="sy0">;</span>
&nbsp;
     <span class="co1">// insert substring into set</span>
     words.<span class="me1">insert</span><span class="br0">&#40;</span>text.<span class="me1">substr</span><span class="br0">&#40;</span>beg_pos<span class="sy0">,</span>
                              end_pos <span class="sy0">==</span> std<span class="sy0">::</span><span class="kw4">string</span><span class="sy0">::</span><span class="me2">npos</span> <span class="co1">// if end_pos is &quot;not found&quot;</span>
                              <span class="sy0">?</span> std<span class="sy0">::</span><span class="kw4">string</span><span class="sy0">::</span><span class="me2">npos</span>          <span class="co1">// then &quot;all remaining characters&quot;</span>
                              <span class="sy0">:</span> end_pos <span class="sy0">-</span> beg_pos<span class="br0">&#41;</span><span class="br0">&#41;</span><span class="sy0">;</span>
&nbsp;
     <span class="co1">// find beginning of the next word</span>
     beg_pos <span class="sy0">=</span> text.<span class="me1">find_first_not_of</span><span class="br0">&#40;</span>delims<span class="sy0">,</span> end_pos<span class="br0">&#41;</span><span class="sy0">;</span>
