   <span class="co1">// find beginning of the first word</span>
   std<span class="sy0">::</span><span class="kw4">string</span><span class="sy0">::</span><span class="me2">size_type</span> beg_pos <span class="sy0">=</span> text.<span class="me1">find_first_not_of</span><span class="br0">&#40;</span>delims<span class="br0">&#41;</span><span class="sy0">;</span>
